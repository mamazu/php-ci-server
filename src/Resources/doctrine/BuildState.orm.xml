<doctrine-mapping 
      xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" 
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
      <entity name="App\Entity\BuildState">
            <id name="id" type="integer" column="id">
                  <generator strategy="AUTO"/>
            </id>
            <many-to-one field="buildJob" target-entity="App\Entity\BuildJob" inversed-by="states"/>
            <field name="name" />
            <field name="time" type="datetime" />
      </entity>
</doctrine-mapping>